<script scr="/javascripts/rent.js"> </script>
<script src="/javascripts/dashboard.js"></script>
<script src="/javascripts/jquery.js" charset="utf-8"></script>
<nav class="navbar navbar-light bg-light" id="logobike"></nav>
<main class="full-screen">
  <article class="justify-content-center mx-0">
    <div class="bg-CPE-white Address-btn1">
      <button class="btn btn-default" onclick="location.href='/dashboard'"> <i class="fa fa-shield fa-rotate-90 fa-3x"
          aria-hidden="true"></i> </button>
      <div class="acomp-header text-center">
        <h3 class="text-CPE-orange">Acompanhamento de Alugueis</h3>
        <h3 class="text-CPE-orange">{{unidade}}</h3>
      </div>
    </div>
  </article>
  <article class="mt-3">
    <br>
    <section class="container">
      <table class="table table-responsive-sm">
        <thead class="thead-CPE-white">
          <tr>
            <th class="text-center">Nome</th>
            <th class="text-center">Equipamento</th>
            <th class="text-center">Quantidade</th>
            <th class="text-center">Status</th>
            <th class="text-center">Opções</th>
          </tr>
        </thead>
        <tbody id="table">
          {{#each rent}}
          <tr>
            <td scope="row" class="text-center align-middle font-weight-bold">{{client.name}}</td>
            <td scope="row" class="text-center align-middle font-weight-bold">{{equipament.name}}</td>
            <td scope="row" class="text-center align-middle font-weight-bold">{{remainingQuantity}}</td>
            <td scope="row" id="status" class="text-center align-middle font-weight-bold">{{status}}</td>
            <td scope="row" class="text-center">

              <form action="/{{statusredirect}}/{{id}}" method="get">
                <button class="btn text-white orange-button" id="showbutton" type="submit">Ver</button>
              </form>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </section>
  </article>
</main>

<script src="/javascripts/jquery.js" charset="utf-8"></script>
<script src="/javascripts/moment-with-locales.min.js"></script>
<script src="/javascripts/search-table.js"></script>
<script src="/javascripts/index.js"></script>
<nav class="navbar navbar-light bg-light" id="logobike"></nav>
<div class="pl-lg-5 pr-lg-5">
  <button class="btn btn-default" onclick="location.href='/home'"> <i class="fa fa-shield fa-rotate-90 fa-3x" aria-hidden="true"></i> </button>
  <div class="texto-centro mb-3">
    <FONT size="6" face="Segoe UI Symbol" color="#3CB1FE" >
      <h3>Acompanhamento de Alugueis</h3>
        <h3>{{unidade}}</h3>
    </FONT>
  </div>
</div>



  <article class="mt-3">
    <section class="row col-12 d-block d-sm-flex justify-content-between mx-auto">
      <div class="text-center">
        <button type="button" id="yellow-beach-btn" onclick="location.href='/signup'" class="btn orange-button btn-lg mt-4">Novo Cliente</button>
        <button type="button" id="yellow-beach-btn" onclick="location.href='/newRent'" class="btn orange-button btn-lg mt-4">Novo Aluguel</button>

      </div>
      <div class="text-center">
        <button onclick="location.href = '/logout'" class="btn orange-button btn-lg mt-4">Deslogar</button>
      </div>
    </section>
    <br>
    <section class="container">
      <table class="table table-responsive-sm">
        <thead class="thead-CPE-white">
          <tr>
            <th class="text-center">Nome</th>
            <th class="text-center">Equipamento</th>
            <th class="text-center">Quantidade</th>
            <th class="text-center">Opções</th>
          </tr>
        </thead>
        <tbody id="table">
          {{#each rents}}
          <tr>
            <td scope="row" class="text-center align-middle font-weight-bold">{{client.name}}</td>
            <td scope="row" class="text-center align-middle font-weight-bold">{{equipament.name}}</td>
            <td scope="row" class="text-center align-middle font-weight-bold">{{remainingQuantity}}</td>
            <td scope="row" class="text-center">
                <form action="/show/{{id}}" method="get">
                  <button class="btn text-white orange-button" type="submit">Ver</button>
                </form>
                <form action="/delete/{{id}}" method="POST">
                  <button class="btn text-white orange-button mt-1" id = "confirmClickActionElementId"  type="submit" >Cancelar</button>
                </form>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </section>
  </article>
</main>


<script src="/javascripts/moment-with-locales.min.js"></script>
<script src="/javascripts/search-table.js"></script>
<script src="/javascripts/index.js"></script>

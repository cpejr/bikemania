<script scr="/javascripts/rent.js"> </script>
<script src="/javascripts/dashboard.js"></script>
<script src="/javascripts/jquery.js" charset="utf-8"></script>
<nav class="navbar navbar-light bg-light" id="logobike"></nav>
  <div class="pl-lg-5 pr-lg-5">
  <button class="btn btn-default" onclick="location.href='/dashboard'"> <i class="fa fa-shield fa-rotate-90 fa-3x"
      aria-hidden="true"></i> </button>
  <div class="texto-centro mb-3">
    <FONT face="Segoe UI Symbol" color="#fd7e14">
      <h3 id="titulo">Acompanhamento de Alugueis</h3>
      <h3 id="titulo">{{unidade}}</h3>
    </FONT>
  </div>
  <article class="mt-3">
    <br>
    <section class="container">
      <table class="table table-responsive-sm">
        <thead class="thead-CPE-white">
          <tr>
            <th class="text-center" id="tabela">Nome</th>
            <th class="text-center" id="tabela">Equipamento</th>
            <th class="text-center" id="tabela">Quantidade</th>
            <th class="text-center" id="tabela">Status</th>
            <th class="text-center" id="tabela">Opções</th>
          </tr>
        </thead>
        <tbody id="table">
          {{#each rent}}
          <tr>
            <td scope="row" class="text-center align-middle font-weight-bold">{{client.name}}</td>
            <td scope="row" class="text-center align-middle font-weight-bold">{{equipament.name}}</td>
            <td scope="row" class="text-center align-middle font-weight-bold">{{remainingQuantity}}</td>
            <td scope="row" class="text-center align-middle font-weight-bold">{{status}}</td>
            <td scope="row" class="text-center">

              <form action="/show/{{id}}" method="get">
                <button class="btn text-white orange-button" id="showbutton" type="submit">Ver</button>
              </form>
            </td>
          </tr>
          {{/each}}
           {{#each rentsWaiting}}
          <tr>
            <td scope="row" class="text-center align-middle font-weight-bold">{{client.name}}</td>
            <td scope="row" class="text-center align-middle font-weight-bold">{{equipament.name}}</td>
            <td scope="row" class="text-center align-middle font-weight-bold">{{remainingQuantity}}</td>
            <td scope="row" class="text-center align-middle font-weight-bold">{{status}}</td>
            <td scope="row" class="text-center">

              <form action="/{{statusredirect}}/{{id}}" method="get">
                <button class="btn text-white orange-button" id="showbutton" type="submit">Ver</button>
              </form>
              <form action="/delete/{{id}}" method="POST">
              <button class="btn text-white orange-button mt-1" id="confirmClickActionElementId"
                type="submit">Cancelar</button>
            </form>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </section>
  </article>
   <div class="texto-centro mb-3">
    <FONT face="Segoe UI Symbol" color="#fd7e14">
      <h3 id="titulo">Pagamento Pendente</h3>
    </FONT>
  </div>
  <div class="col-lg-6 ">
    <form action="/pagamentoTotal/:{{cpf}}:{{unidade}}" method="post">
      <div class="cadastro">
        <div class="texto-centro mt-3">
          <input class="form-control" id="input" value="{{pendingPayment}}">
          <select id="productCode" class="drowdownoptions form-control" name="end[payment]" required="required">
            <option value="Crédito">Crédito</option>
            <option value="Débito">Débito</option>
            <option value="Dinheiro">Dinheiro</option>
          </select>
        </div>
      </div>
      <button id="btnencerrar" class="btn text-white orange-button" type="submit">Pagamento</button>
    </form>
  </div>
<script src="/javascripts/jquery.js" charset="utf-8"></script>

<main class="full-screen">
  <article class="justify-content-center mx-0">
    <div class="bg-CPE-black Address-btn1">
      <button class="btn btn-default" onclick="location.href='/home'"> <i class="fa fa-shield fa-rotate-90 fa-3x" aria-hidden="true"></i> </button>
      <div class="acomp-header">
        <h3 class="text-CPE-yellow">Acompanhamento de aluguéis</h3>
      </div>
    </div>
<button class="btn btn-default" onclick="location.href='/novoaluguel'"> <i class="fa fa-plus-circle fa-5x" aria-hidden="true"></i> </button>
  </article>
  <article class="mt-3">
    <section class="row col-12 d-block d-sm-flex justify-content-between mx-auto">
      <div class="text-center">
        <form action="yellow-beach" method="post" id="yellow-beach-form">
          <button type="button" id="yellow-beach-btn" class="btn orange-button btn-lg mt-4">Novo Cliente</button>
        </form>
      </div>
      <div class="text-center">
        <button onclick="location.href = '/login'" class="btn orange-button btn-lg mt-4">Deslogar</button>
      </div>
    </section>
    <br>
    <section class="container">
      <table class="table table-responsive-sm">
        <caption>Lista de aluguéis</caption>
        <thead class="thead-CPE-black">
          <tr>
            <th class="text-center">Nome</th>
            <th colspan="6" class="text-center d-none d-lg-table-cell"></th>
            <th class="text-center">Tempo</th>
            <th class="text-center">Equipamento</th>
            <th class="text-center">Preco</th>
            <th class="text-center">Opcoes</th>
          </tr>
        </thead>
        <tbody id="table">
          {{#each teste}}
          <tr>
            <td scope="row" class="text-center align-middle font-weight-bold">{{nome}}</td>
            <td scope="row" class="text-center d-none d-lg-table-cell"></td>
            <td scope="row" class="text-center d-none d-lg-table-cell"></td>
            <td scope="row" class="text-center d-none d-lg-table-cell"></td>
            <td scope="row" class="text-center d-none d-lg-table-cell"></td>
            <td scope="row" class="text-center d-none d-lg-table-cell"></td>
            <td scope="row" class="text-center d-none d-lg-table-cell"></td>
            <td scope="row" class="text-center d-none">{{tempo}}</td>
            <td scope="row" class="text-center align-middle font-weight-bold">{{tempo}}</td>
            <td scope="row" class="text-center align-middle font-weight-bold">{{eq}}</td>
            <td scope="row" class="text-center align-middle font-weight-bold"></td>
            <td scope="row" class="text-center">
              <form action="/pagamento/{{id}}" method="get">
              <button class="btn text-white orange-button" type="submit">Encerrar</button>
            </form>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </section>
  </article>
</main>


<script src="/javascripts/moment-with-locales.min.js"></script>
<script src="/javascripts/search-table.js"></script>
<script src="/javascripts/index.js"></script>

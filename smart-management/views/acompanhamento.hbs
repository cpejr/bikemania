<main class="full-screen">
  <article class="justify-content-center mx-0">
    <div class="text-center bg-CPE-black">
      <h3 class="text-CPE-yellow">Membros logados</h3>
    </div>
  </article>
  <article class="mt-3">
    <section class="row col-12 d-block d-sm-flex justify-content-between mx-auto">
      <div class="col-6 d-none d-sm-block">
        <p>Pesquise um aluguel:</p>
        <input type="text" id="search" class="form-control" placeholder="Nome do membro">
      </div>
      <div class="text-center">
        <form action="yellow-beach" method="post" id="yellow-beach-form">
          <button type="button" id="yellow-beach-btn" class="btn black-button btn-lg mt-4">Novo Cliente</button>
        </form>
      </div>
      <div class="text-center">
        <button onclick="location.href = '/login'" class="btn black-button btn-lg mt-4">Deslogar</button>
      </div>
    </section>
    <br>
    <section class="container">
      <table class="table table-responsive-sm">
        <caption>Lista de membros logados</caption>
        <thead class="thead-CPE-black">
          <tr>
            <th class="text-center">Nome</th>
            <th colspan="6" class="text-center d-none d-lg-table-cell"></th>
            <th class="text-center">Tempo</th>
            <th class="text-center">Equipamento</th>
            <th class="text-center">Preco</th>
            <th class="text-center">Opcoes</th>
          </tr>
        </thead>
        <tbody id="table">
          {{#each teste}}
          <tr>
            <td scope="row" class="text-center align-middle font-weight-bold">{{_cpf}}</td>
            <td scope="row" class="text-center d-none d-lg-table-cell"></td>
            <td scope="row" class="text-center d-none d-lg-table-cell"></td>
            <td scope="row" class="text-center d-none d-lg-table-cell"></td>
            <td scope="row" class="text-center d-none d-lg-table-cell"></td>
            <td scope="row" class="text-center d-none d-lg-table-cell"></td>
            <td scope="row" class="text-center d-none d-lg-table-cell"></td>
            <td scope="row" class="text-center d-none">{{arriveISO}}</td>
            <td scope="row" class="text-center align-middle font-weight-bold"></td>
            <td scope="row" class="text-center align-middle font-weight-bold">{{eq}}</td>
            <td scope="row" class="text-center align-middle font-weight-bold"></td>
            <td scope="row" class="text-center">
              <form action="/pagamento/{{id}}" method="get">
              <button class="btn text-white black-button" type="submit">Encerrar</button>
            </form>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </section>
  </article>
</main>


<script src="/javascripts/moment-with-locales.min.js"></script>
<script src="/javascripts/search-table.js"></script>
<script src="/javascripts/index.js"></script>

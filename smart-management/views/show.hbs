<nav class="navbar navbar-light bg-light" id="logobike"></nav>
<div class="pl-lg-5 pr-lg-5">
  <button class="btn btn-default" onclick="location.href='/dashboard'"> <i class="fa fa-shield fa-rotate-90 fa-3x" aria-hidden="true"></i> </button>
  <div class="texto-centro mb-3">
    <FONT size="6" face="Segoe UI Symbol" color="#3CB1FE" >
      Resumo do Aluguel
    </FONT>
  </div>

  <div class="row mt-3">
    <div class = "col-lg-6">
      <h3 class="pagamento"><b>Nome do cliente:</b> {{rent.client.name}}</h3>
      <h3 class="pagamento"><b>CPF/CNPJ:</b> {{rent.client.cpf}}</h3>
      <h3 class="pagamento"><b>Hora de chegada:</b> {{rent.startHour}}</h3>
      <h3 class="pagamento"><b>Tempo de aluguel:</b> {{rentTime}} minutos</h3>
      <h3 class="pagamento"><b>Equipamento:</b> {{rent.equipament.name}}</h3>
      <h3 class="pagamento"><b>Quantidade:</b> {{rent.quantity}}</h3>
      <h3 class="pagamento"><b>Preço por unidade por minuto:</b> {{unitPrice}}</h3>
      <h3 class="pagamento"><b>Preço total: </b> {{actualPrice}}</h3>
      <h3 class="pagamento"><b>Acessórios: </b> {{rent.accessory}}</h3>
      <h3 class="pagamento"><b>Acessórios extras: </b> {{rent.extraAccessory}}</h3>
      <h3 class="pagamento"><b>Meio aluguel: </b> {{rent.sale}}</h3>
    </div>

    <div class="col-lg-6 mt-sm-3">
      <form action="/close/{{rent.id}}" method="post">
        <h3 class="text-CPE-orange texto-centro">Forma de pagamento</h3>
        
          <div class="texto-centro mt-3">
            <label for="InputNumerodepessoas" ><FONT size="4" face="Swis721 LtEx BT" color="black" >Quantidade devolvida</FONT></label>
          </div>
          <input type="number" class="form-control" id="InputNumerodepessoas" name="close[returnQuantity]" max="{{rent.quantity}}" value="{{rent.quantity}}">
          <input type="hidden" class="form-control" id="InputNumerodepessoas" name="close[now]" value="{{now}}">
          <input type="hidden" class="form-control" id="InputNumerodepessoas" name="close[rentTime]" value="{{rentTime}}">
          <div class="cadastro">
            <div class="texto-centro mt-3">
              <label for="InputEquipamento" ><FONT size="4" face="Swis721 LtEx BT" color="black" >Local de devolução</FONT></label>
              <select id="productCode" class="drowdownoptions form-control" name="close[endLocal]" required = "required">
                <option value="{{{rent.startLocal}}}">{{{rent.startLocal}}}</option>
                <option value="Mirante Bem-Ti-Vi">Mirante Bem-Ti-Vi</option>
                <option value="Matriz">Matriz</option>
                <option value="Vila Pampulha">Vila Pampulha</option>
                <option value="Shopping Contagem">Shopping Contagem</option>                
              </select>
            </div>
          </div>

          <div class="cadastro">
            <div class="texto-centro mt-3">
              <label for="InputEquipamento" ><FONT size="4" face="Swis721 LtEx BT" color="black" >Forma de pagamento</FONT></label>
              <select id="productCode" class="drowdownoptions form-control" name="close[payment]" required = "required">
                <option value="Crédito">Crédito</option>
                <option value="Débito">Débito</option>
                <option value="Dinheiro">Dinheiro</option>      
              </select>
            </div>
          </div>

          <div class="cadastro">
            <div class="mt-3">
              <input type="checkbox" name="close[hasDiscount]" value="Sim"> Desconto</input>
            </div>
          </div>

            <div class="mt-3">
              <textarea name="close[justification]" placeholder="Detalhes do desconto" cols="93" rows="4"></textarea>
            </div>
      
        <div class="btntest mt-3 texto-centro">
        <button type="submit" class="btn_encerrar">Encerrar aluguel</button> </div>
      </form>
    </div>    
  </div>  
</div>

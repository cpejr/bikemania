<script src="/javascripts/newrent.js"></script>
<script src="/javascripts/jquery.js" charset="utf-8"></script>
{{!-- <script>partialPrice();</script> --}}

<nav class="navbar navbar-light bg-light" id="logobike"></nav>
<div class="pl-lg-5 pr-lg-5">
  <button class="btn btn-default" onclick="location.href='/dashboardClient/{{rent.cpf}}'"> <i
      class="fa fa-shield fa-rotate-90 fa-3x" aria-hidden="true"></i> </button>
  <div class="texto-centro mb-3">
    <FONT size="6" face="Segoe UI Symbol" color="#3CB1FE">
      Pagamento
    </FONT>
  </div>

  <h3 class="pagamento"><b>Preço a pagar: </b> {{rent.partialPrice}}</h3>
  <div class="row mt-3">
    <div class="col-lg-6">
      <h3 class="pagamento"><b>Nome do cliente:</b> {{rent.client.name}}</h3>
      <h3 class="pagamento"><b>CPF:</b> {{rent.client.cpf}}</h3>
      <h3 class="pagamento"><b>Hora de chegada:</b> {{rent.startHour}}</h3>
      <h3 class="pagamento"><b>Tempo de aluguel:</b> {{rent.totalTime}} min</h3>
      <h3 class="pagamento"><b>Equipamento:</b> {{rent.equipament.name}}</h3>
      <h3 class="pagamento"><b>Quantidade:</b> {{rent.quantity}}</h3>
      <h3 class="pagamento"><b>Acessórios: </b> {{rent.accessory}}</h3>
      <h3 class="pagamento" id="_id"><b>Código do Cliente: </b> {{rent._id}}</h3>
    </div>
    <div class="col-lg-6 ">
      <form action="/end/{{rent.id}}" method="post">
        <h3 class="text-CPE-orange texto-centro">Forma de pagamento</h3>
        <div class="cadastro">
          <div class="texto-centro mt-3">
            <select id="productCode" class="drowdownoptions form-control" name="end[payment]" required="required">
              <option value="Crédito">Crédito</option>
              <option value="Débito">Débito</option>
              <option value="Dinheiro">Dinheiro</option>
            </select>
          </div>
        </div>

        <div class="cadastro">
          <div class="mt-3">
            <input type="checkbox" name="end[hasDiscount]" value="Sim"> Desconto</input>
          </div>
        </div>

        <div class="mt-3">
          <textarea name="end[justification]" placeholder="Detalhes do desconto" cols="70" rows="4"></textarea>
        </div>

        <div class="btntest mt-3 texto-centro">
          <button type="submit" class="btn_encerrar">Encerrar aluguel</button> </div>
      </form>
    </div>
  </div>
</div>
</div>
<script src="/javascripts/newrent.js"></script>
<script src="/javascripts/jquery.js" charset="utf-8"></script>
{{!-- <script>partialPrice();</script> --}}

<nav class="navbar navbar-light bg-light" id="logobike"></nav>
<div class="pl-lg-5 pr-lg-5">
  <button class="btn btn-default" onclick="location.href=`/{{link}}/{{rent.client.cpf}}`"> <i
      class="fa fa-shield fa-rotate-90 fa-3x" aria-hidden="true"></i> </button>
  <div class="texto-centro mb-3">
    <FONT id="titulo" size="6" face="Segoe UI Symbol" color="#3CB1FE">
      Pagamento
    </FONT>
  </div>

  <div class="row mt-3">
    <div class="col-lg-6">
      {{!-- <h3 class="pagamento" id="list"><b>Preço a pagar: </b> {{partialPrice}}</h3> --}}
      <h3 class="pagamento" id="list"><b>Nome do cliente:</b> {{rent.client.name}}</h3>
      <h3 class="pagamento" id="list"><b>CPF:</b> {{rent.client.cpf}}</h3>
      <h3 class="pagamento" id="list"><b>Hora de entrada:</b> {{rent.startHour}}</h3>
      <h3 class="pagamento" id="list"><b>Hora de saída:</b> {{rent.endHour}}</h3>
      <h3 class="pagamento" id="list"><b>Tempo de aluguel:</b> {{rent.totalTime}} min</h3>
      <h3 class="pagamento" id="list"><b>Equipamento:</b> {{rent.equipament.name}}</h3>
      <h3 class="pagamento" id="list"><b>Quantidade:</b> {{rent.quantity}}</h3>
      <h3 class="pagamento" id="list"><b>Acessórios: </b> {{rent.accessory}}</h3>
      <h3 class="pagamento" id="_id"><b>Código do Cliente: </b> {{rent._id}}</h3>
    </div>
    <div class="col-lg-6 ">
      <form action="/end/{{rent.id}}" method="post">
        <br>
        <div class="texto-centro mb-3">
          <FONT id="titulo" size="5" face="Segoe UI Symbol" color="#fd7e14">
            Forma de pagamento
          </FONT>
        </div>
        <div class="cadastro">
          <div class="row">
            <div class="mx-3 text-center">
              <input id="payment" class="form-control" value="{{partialPrice}}" readonly="readonly">
            </div>
            <div class="mx-3 text-center">
              <select id="payment" class="drowdownoptions form-control" name="end[payment]" required="required">
                <option value="Crédito">Crédito</option>
                <option value="Débito">Débito</option>
                <option value="Dinheiro">Dinheiro</option>
              </select>
            </div>
          </div>
        </div>

        <div class="cadastroPg">
          <div class="mt-3">
            <input id="list" type="checkbox" name="end[hasDiscount]" value="Sim" style="margin-left: 20%;">
            Desconto</input>
          </div>
        </div>

        <div class="mt-3">
          <textarea name="end[justification]" placeholder="Detalhes do desconto" cols="65" rows="4"
            style="margin-left: 20%;"></textarea>
        </div>
        <section class="row" style="margin-top: 20px;">
          <div class="text-center mt-4">
            <button id="btnaguardando" type="submit" class="btn_encerrar text-white">Pagar agora</button> </div>
          <div class="text-center mt-4">
            <button id="btnaguardando" type="button" class="btn_encerrar text-white"
              onclick="location.href=`/{{link}}/{{rent.client.cpf}}`">Pagar mais tarde</button></div>
        </section>
      </form>
    </div>
  </div>
</div>
</div>